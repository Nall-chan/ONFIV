{
    "elements": [],
    "actions": [
        { 
            "type": "ExpansionPanel",
            "caption": "Credentials",
            "expanded": true,
            "items": [
                { 
                    "type": "RowLayout",
                    "items": [
                        {
                            "name": "Username",
                            "type": "ValidationTextBox",
                            "caption": "Username"
                        },
                        {
                            "name": "Password",
                            "type": "PasswordTextBox",
                            "caption": "Password"
                        },
                        {
                            "onClick": "IPS_RequestAction($id,'Save',urlencode($Username).':'.urlencode($Password));",
                            "type": "Button",
                            "caption": "Save & Reload"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Configurator",
            "name": "Discovery",
            "add": false,
            "delete": true,
            "sort": {
                "column": "IPAddress",
                "direction": "ascending"
            },
            "columns": [{
                    "caption": "Host",
                    "name": "IPAddress",
                    "width": "150px"
                }, {
                    "caption": "Name",
                    "name": "name",
                    "width": "auto"
                }, {
                    "caption": "Manufacturer",
                    "name": "Manufacturer",
                    "width": "180px"
                }, {
                    "caption": "Model",
                    "name": "Model",
                    "width": "250px"
                }, {
                    "caption": "Firmware",
                    "name": "FirmwareVersion",
                    "width": "150px"
                }, {
                    "caption": "Serial Number",
                    "name": "SerialNumber",
                    "width": "150px"
                }
            ],
            "values": []
        },
        {
            "type": "PopupAlert",
            "name": "ErrorPopup",
            "visible": false,
            "popup": {
                "items": [
                    {
                        "type": "Label",
                        "caption": "Some devices could not be determined. Please check the credentials."
                    },
                    {
                        "caption": "List of hosts:",
                        "type": "List",
                        "add": false,
                        "delete": false,
                        "sort": {
                            "column": "IPAddress",
                            "direction": "ascending"
                        },
                        "columns": [
                            {
                                "caption": "Host",
                                "name": "IPAddress",
                                "width": "200px"
                            }, {
                                "caption": "Errormessage",
                                "name": "ErrorMessage",
                                "width": "auto"
                            }
                        ],
                        "values": []
                    }
                ]
            }
        },
        {
            "type": "PopupAlert",
            "visible": true,
            "name": "ProgressPopup",
            "popup": {
                "closeCaption": "Wait until this dialog close!",
                "items": [{
                        "type": "Label",
                        "caption": "Determine abilities of the devices."
                    }, {
                        "type": "ProgressBar",
                        "name": "ScanProgress",
                        "minimum": 0,
                        "maximum": 1,
                        "current": 0,
                        "caption": "wait for end of discovery"
                    }]
            }
        }
    ]
}
